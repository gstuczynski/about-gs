.homePage
  min-height: 100vh
  width: 100%
  position: absolute
  
  .homeContent
      max-width: 1000px
      margin: 10% auto 0 auto
      position: relative


    .welcomeText
      border: solid black
      padding: 40px

    .feedback
      margin-top: 50px
      border: solid black
      div
        margin: 0 auto
        width: fit-content
      form
        margin: 0 auto
        width: fit-content
        display: flex
        flex-flow: column


    .feedbackSuccess
      color: green
    
    .feedbackError
      color: red