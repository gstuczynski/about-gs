@import "./breakpoints.styl"

.header
  position: fixed!important
  transition: top 0.3s ease-in-out
  background: black
  width: 100%
  z-index: 100
  +for_breakpoint(small)
    text-align: center


  .navigation
    display: flex
    margin: 0 auto
    font-family: "Permanent Marker"
    justify-content: space-around
    width: 600px
    +for_breakpoint(small)
      width: 100%
    
    a
      color: white!important

  .toggler
    background-color: white
    span
      background-color: white