@import "./breakpoints.styl"

.projectBlock
  margin: 20px auto
  display: flex
  max-width: 800px
  color: white
  margin-top: 80px
  padding 20px
  border: solid
  background-image: linear-gradient(to bottom right, #03359b, black);
  font-family: Gamja Flower
  font-size: 22px
  position: relative
  +for_breakpoint(small)
    color: red
    flex-flow: column

  
  img
    max-width: 200px
    max-height: 200px
    +for_breakpoint(small)
      max-width: 80%
      max-height: initial
      align-self: center
      margin-bottom: 20px

  .modal
    position: relative

  .projectAttachments
    margin-top: 20px
    a
      margin: 0 5px


  .githubIcon
    

    img
      animation-duration: 1s
      top: 50%
      background: white
      padding: 0 !important
      
      &:hover
        cursor: pointer
        animation-name: bounce

  button
    background: none
    border: none
    color: #afaf92
    font-size: 28px

    &:hover
      color: red
      font-size: 30px

.modalBtn
  position: absolute
  right: 0

@keyframes bounce
	0%, 100%, 20%, 50%, 80% 
		transform:         translateY(0)
	40% 
		transform:         translateY(-10px)
	60% 
		transform:         translateY(-5px)